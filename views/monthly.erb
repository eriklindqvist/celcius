<!doctype html>
<html>
  <head>
    <title>Energiförbrukning</title>
    <meta charset="UTF-8" />
    <script type="text/javascript" src="<%= url('zepto.min.js') %>"></script>
    <script type="text/javascript" src="<%= url('zepto-adapter.src.js') %>"></script>
    <script type="text/javascript" src="<%= url('highcharts.js') %>"></script>
    <script type="text/javascript">
      var data = <%= @data %>;

      var d1 = $.map(data["energies"]["Hushållsel"]||[], function(e){return [[new Date(e[0]).getTime(), e[1]]]; });
      var d2 = $.map(data["energies"]["Elbil"]||[], function(e){return [[new Date(e[0]).getTime(), e[1]]]; });

      var months = ["Januari", "Februari", "Mars", "April", "Maj", "Juni", "Juli", "Augusti", "September", "Oktober", "November", "December"];

    $(document).ready(function () {
      Highcharts.setOptions({
          global: {
              //timezoneOffset: -1 * 60,
              useUTC: false
          }
      });

      new Highcharts.Chart({
        chart: {
          renderTo: 'container',
            type: 'column'
        },
        title: {
            text: 'Energiförbrukning',
        },
        subtitle: {
          text: months[new Date(d1[0][0]).getMonth()]
        },
        yAxis: {
            title: {
                text: 'kWh'
            },
            stackLabels: {
                enabled: true,
                style: {
                    fontWeight: 'bold',
                    color: (Highcharts.theme && Highcharts.theme.textColor) || 'gray'
                }
            }
        },
        xAxis: {
            type: 'datetime'
        },
        legend: {
            align: 'right',
            x: -30,
            verticalAlign: 'top',
            y: 25,
            floating: true,
            backgroundColor: (Highcharts.theme && Highcharts.theme.background2) || 'white',
            borderColor: '#CCC',
            borderWidth: 1,
            shadow: false
        },
        tooltip: {
            headerFormat: '',
            pointFormat: '{series.name}: {point.y}'
        },
        plotOptions: {
            column: {
                stacking: 'normal',
            }
        },
        series: [{
            name: 'Elbil',
            data: d2
        },{
            name: 'Hushållsel',
            data: d1
        }]
    });
  });
    </script>
  </head>
  <body>
    <div id="container" style="min-width: 310px; height: 800px; margin: 0 auto"></div>
  </body>
</html>
